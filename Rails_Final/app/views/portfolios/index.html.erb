<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<% javascript_include_tag 'tables.js' %>

<body class="bg-white">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">All</a>
    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Portfolios</a>
  </div>
</nav>
<div class="card-body">
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
    <table class="table table-bordered" id="most_active_table" width="100%" cellspacing="0">
      <thead>
        <i class="text-center fa fa-table"></i>
          <tr>
            <th>Symbol</th>
            <th>Security Type</th>
            <th>% Market</th>
            <th>Price</th>
          </tr>
        </thead>
             <tbody>
             </tbody>
    </table>

  </div>
  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
    <h1>Listing Portfolios</h1>
    <table>
      <thead>
        <tr>
          <th>Ticker</th>
          <th>Amount</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @portfolios.each do |portfolio| %>
          <tr>

            <td><%= portfolio.ticker %></td>
            <td><%= portfolio.amount %></td>
            <td><%= link_to 'Show', portfolio %></td>
            <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
            <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Portfolio', new_portfolio_path %>
  </div>
</div>
</div>
</div>
</div>

</body>
