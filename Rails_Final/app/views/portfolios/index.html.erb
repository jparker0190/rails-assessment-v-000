<body class="bg-white">
  <h1>Current Portfolio's</h1>
  <%=link_to("portfolios", new_portfolio_path)%>
  <%@portfolios.each do |portfolio|%>


  <div class="container">
    <div class="card card-login mx-auto mt-5">
          <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
              <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true"><%=portfolio.name%></a>
            </div>
          </nav>
       <div class="card-body">
         <div class="tab-content" id="nav-tabContent">
           <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
              <table class="table table-bordered" id="most_active_table" width="100%" cellspacing="0">
                <thead>
                    <i class="text-center fa fa-table"></i>
                    <tr>
                      <th>Symbol</th>
                      <th>Sector</th>
                      <th>High</th>
                      <th>Low</th>
                      <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                  <% portfolio.stocks.each do |stock| %>
                    <tr>
                      <td><%= stock.symbol %></td>
                      <td><%= stock.sector %></td>
                      <td><%= stock.high %></td>
                      <td><%= stock.low %></td>
                      <td><%= stock.price %></td>
                      <td><%= link_to 'Edit', edit_portfolio_path(stock) %></td>
                      <td><p><%= link_to 'Destroy', portfolio_stock_path(stock), method: :delete, data: { confirm: 'Are you sure?' } %></p></td>

                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= link_to 'Add Stocks', new_portfolio_stock_path(portfolio) %>
              <%= link_to 'Destroy', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } %>
           </div>
         </div>
       </div>
    </div>
  </div>
  <%end%>
</body>
